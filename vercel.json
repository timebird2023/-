{
  "version": 2,
  "builds": [
    {
      "src": "facebook_bot_v2.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "30mb" }
    }
  ],
  "routes": [
    {
      "src": "/webhook",
      "dest": "facebook_bot_v2.py"
    },
    {
      "src": "/.*",
      "dest": "facebook_bot_v2.py"
    }
  ]
}
